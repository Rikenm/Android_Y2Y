<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:context="fragments.HomeFragment"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

    <TextView
        android:id="@+id/fragment_home_introEt"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="2"
        android:text="Hello, Rikenm!  "
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Reminder:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="How are you feeling today?"
        android:textAlignment="center"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/fragment_home_btnrating1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="2"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="7" />

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Do you have any comments today?"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/fragment_home_commentEt"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginLeft="80dp"
        android:layout_weight="3"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fragment_home_btnsave"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginLeft="150dp"
        android:layout_weight="1"
        android:text="Save" />


   </LinearLayout>

</android.support.constraint.ConstraintLayout>